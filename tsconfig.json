{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["./src/**/*"],
  "exclude": ["./test/**/*", "./docs/**/*", "./dist/**/*"]
}
